<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox styleClass="simulationButtons" fx:controller="GUI.Controllers.MapButtonsController"
      xmlns:fx="http://javafx.com/fxml">
    <Button fx:id="pause" text="Pause" onAction="#pauseButton"/>
    <Button fx:id="halfSpeed" text="0.5x" onAction="#halfSpeedButton"/>
    <Button fx:id="run" text="Play" onAction="#playButton"/>
    <Button fx:id="doubleSpeed" text="2x" onAction="#doubleSpeedButton"/>
    <Button fx:id="tripleSpeed" text="3x" onAction="#tripleSpeedButton"/>
    <Label text="Epoch:"/>
    <Label fx:id="epoch" styleClass="data" text="0"/>
</HBox>